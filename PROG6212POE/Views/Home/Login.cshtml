@model PROG6212POE.Models.HomeLogin

@{
    ViewData["Title"] = "Login Page";
}

<form action="/home/login" method="post">
    <div class="text-center">
        <h3>Login</h3>
        <p>Please enter a username & password</p>
    </div>

    <div class="mb-3">
        <label for="Username" class="form-label">Username</label>
        <input type="text" class="form-control" id="Username" asp-for="Username">
    </div>

    <div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input type="password" class="form-control" id="Password" asp-for="Password">
    </div>

    <button type="submit"
            class="btn btn-primary"
            id="Login_Submit_Button">
        Login
    </button>

</form>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">
    window.onload = function () {
      alert("@ViewBag.Message");
    };
    </script>
}
